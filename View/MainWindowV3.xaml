                        HorizontalAlignment="Left"
                        Foreground="#3f3f3f"
                        Icon="Solid_Plus"/>
                    <TextBlock
                        Grid.Column="1"
                        Margin="0,0,0,1"
                        HorizontalAlignment="Center"
                        Text="{TemplateBinding Content}"/>
                </Grid>
            </Button>
        </ControlTemplate>
        <ControlTemplate TargetType="Button" x:Key="UserButtonTemplate">
