                    Content="Дружба"/>
                <CheckBox
                    Style="{StaticResource SecondColumn}"
                    Grid.Row="7"
                    Content="Красный сад"/>
                <CheckBox
                    Style="{StaticResource SecondColumn}"
                    Grid.Row="8"
                    Content="Кулешовка"/>
                <CheckBox
                    Style="{StaticResource SecondColumn}"
                    Grid.Row="9"
                    Content="Лесная полянка"/>
                <CheckBox
