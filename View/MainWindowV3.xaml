                                    <RowDefinition Height="20"/>
                                    <RowDefinition Height="15"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="14"/>
                                </Grid.RowDefinitions>
                                <Image
                                    Grid.RowSpan="10"
                                    Source="{Binding Preview, Converter={StaticResource ByteArrayToBitmapImage}}"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Stretch="UniformToFill"/>
                                <TextBlock
                                    Grid.Column="2"
                                    FontSize="15"
                                    FontWeight="Bold"
                                    FontFamily="Arial"
                                    Foreground="#666"
                                    Text="{Binding .,Converter={StaticResource ObjectToHeader}}"/>
