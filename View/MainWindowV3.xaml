        <Style TargetType="ListBoxItem" x:Key="PageButtonItemStyle">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Border
                            Cursor="Hand"
                            Height="30"
                            Name="PART_Bd"
                            Width="30"
                            Margin="3,0"
                            BorderBrush="#bababa"
                            BorderThickness="1"
                            Background="#eee">
                            <TextBlock
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Name="PART_Tb"
                                Text="{Binding .}"/>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseLeftButtonUp">
                                    <i:InvokeCommandAction
                                        Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}, Path=DataContext.GoToPageAsync}"
                                        CommandParameter="{Binding ElementName=PART_Tb, Path=Text}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Border>
                        <ControlTemplate.Triggers>
                            <DataTrigger Value="True">
                                <DataTrigger.Binding>
                                    <MultiBinding Converter="{StaticResource PageToBool}">
                                        <Binding Path="Text" ElementName="PART_Tb"/>
                                        <Binding Path="DataContext.CurrentPageNumber" RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType=Window}"/>
                                    </MultiBinding>
                                </DataTrigger.Binding>
                                <Setter Property="Cursor" Value="Arrow" TargetName="PART_Bd"/>
                                <Setter Property="BorderBrush" Value="#707070" TargetName="PART_Bd"/>
                                <Setter Property="Background" Value="#BEE6FD" TargetName="PART_Bd"/>
                            </DataTrigger>
                            <DataTrigger Value="..." Binding="{Binding ElementName=PART_Tb, Path=Text}">
                                <Setter Property="Cursor" Value="Arrow" TargetName="PART_Bd"/>
                            </DataTrigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#BEE6FD" TargetName="PART_Bd"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
