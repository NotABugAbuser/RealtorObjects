                CommandParameter="{TemplateBinding CommandParameter}">
                <Grid 
                    Width="135">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <fa:ImageAwesome
