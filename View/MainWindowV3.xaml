                            Grid.Row="18"
                            Content="Центр"/>
                        <CheckBox
                            IsChecked="{Binding Filtration.ConditionOptions.IsAllConditions}"
                            Style="{StaticResource FourthColumn}"
                            Grid.Row="0"
                            Content="Все состояния"/>
                        <CheckBox
                            IsChecked="{Binding Filtration.ConditionOptions.IsEuro}"
                            Style="{StaticResource FourthColumn}"
                            Grid.Row="2"
                            Content="Евро"/>
                        <CheckBox
                            IsChecked="{Binding Filtration.ConditionOptions.IsExcellent}"
                            Style="{StaticResource FourthColumn}"
                            Grid.Row="3"
                            Content="Отличное"/>
                        <CheckBox
                            IsChecked="{Binding Filtration.ConditionOptions.IsGood}"
                            Style="{StaticResource FourthColumn}"
                            Grid.Row="4"
                            Content="Хорошее"/>
                        <CheckBox
                            IsChecked="{Binding Filtration.ConditionOptions.IsLiving}"
                            Style="{StaticResource FourthColumn}"
                            Grid.Row="5"
                            Content="Жилое"/>
                        <CheckBox
                            IsChecked="{Binding Filtration.ConditionOptions.IsCosmeticRequired}"
                            Style="{StaticResource FourthColumn}"
                            Grid.Row="6"
                            Content="Требуется космет. ремонт"/>
