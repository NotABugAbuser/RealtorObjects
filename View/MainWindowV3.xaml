                                VerticalAlignment="Bottom"
                                Text="до"/>
                            <TextBlock
                                Style="{StaticResource RangeTextBlock}"
                                Text="{Binding Filtration.MaximumArea, StringFormat=0квм}"/>
                        </StackPanel>
                        <local:RangeSlider
                            Grid.Row="1"
                            Width="1100"
                            VerticalAlignment="Top"
                            Height="19"
                            LowerValue="{Binding Filtration.MinimumArea, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                            UpperValue="{Binding Filtration.MaximumArea, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
