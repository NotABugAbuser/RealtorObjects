                            IsChecked="{Binding Filtration.ConditionOptions.IsMajorRequired}"
                            Style="{StaticResource FourthColumn}"
                            Grid.Row="7"
                            Content="Требуется капитальный ремонт"/>
                        <CheckBox
                            IsChecked="{Binding Filtration.ConditionOptions.IsWithoutDecoration}"
                            Style="{StaticResource FourthColumn}"
                            Grid.Row="8"
                            Content="Без отделки"/>
                        <CheckBox
                            IsChecked="{Binding Filtration.HeatingOptions.IsAllHeatings}"
                            Style="{StaticResource FifthColumn}"
                            Grid.Row="0"
                            Content="Все виды отоплений"/>
                        <CheckBox
                            IsChecked="{Binding Filtration.HeatingOptions.IsAGV}"
                            Style="{StaticResource FifthColumn}"
                            Grid.Row="2"
                            Content="АГВ"/>
                        <CheckBox
                            IsChecked="{Binding Filtration.HeatingOptions.IsBoiler}"
                            Style="{StaticResource FifthColumn}"
                            Grid.Row="3"
                            Content="Котел"/>
                        <CheckBox
                            IsChecked="{Binding Filtration.HeatingOptions.IsLocal}"
                            Style="{StaticResource FifthColumn}"
                            Grid.Row="4"
                            Content="Местное"/>
                        <CheckBox
                            IsChecked="{Binding Filtration.HeatingOptions.IsStove}"
                            Style="{StaticResource FifthColumn}"
                            Grid.Row="5"
                            Content="Печное"/>
                        <CheckBox
                            IsChecked="{Binding Filtration.HeatingOptions.IsTPS}"
                            Style="{StaticResource FifthColumn}"
                            Grid.Row="6"
                            Content="ТЭЦ"/>
