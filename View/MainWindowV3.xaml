                    Content="Соленое озеро"/>
                <CheckBox
                    Style="{StaticResource ThirdColumn}"
                    Grid.Row="17"
                    Content="Солнечный"/>
                <CheckBox
                    Style="{StaticResource ThirdColumn}"
                    Grid.Row="18"
                    Content="Центр"/>
                <CheckBox
                    Style="{StaticResource FourthColumn}"
                    Grid.Row="0"
                    Content="Все состояния"/>
                <CheckBox
