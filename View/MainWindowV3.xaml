                                    Grid.Column="3"
                                    TextAlignment="Right"
                                    FontSize="17"
                                    FontWeight="Bold"
                                    FontFamily="Arial"
                                    Foreground="Black"
                                    Text="{Binding Price, StringFormat=### ### ##0 ₽, Converter={StaticResource UnitsToThousands}}"/>
                                <TextBlock
                                    Grid.Column="2"
                                    Grid.Row="1"
                                    FontSize="14"
                                    Foreground="#666"
                                    Text="{Binding ., Converter={StaticResource ObjectToAddress}}"/>
                                <TextBlock
                                    FontSize="14"
                                    TextAlignment="Justify"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="Wrap"
                                    Text="{Binding GeneralInfo.Description}"
                                    Grid.Column="2"
                                    Grid.ColumnSpan="2"
                                    Grid.Row="3"/>
