                    <StackPanel
                        Grid.Row="2">
                        <StackPanel
                            Width="275"
                            Margin="0,20,0,12"
                            Orientation="Horizontal">
                            <TextBlock
                                VerticalAlignment="Bottom"
                                Text="Стоимость от"/>
                            <TextBlock
                                Style="{StaticResource RangeTextBlock}"
                                Text="{Binding Filtration.MinimumPrice, StringFormat=### ### ##0тыс}"/>
                            <TextBlock
                                VerticalAlignment="Bottom"
                                Text="до"/>
                            <TextBlock
                                Style="{StaticResource RangeTextBlock}"
                                Text="{Binding Filtration.MaximumPrice, StringFormat=### ### ##0тыс}"/>
                        </StackPanel>
                        <local:RangeSlider
                            Width="1100"
                            Grid.Row="1"
                            Height="19"
                            UpperValue="{Binding Filtration.MaximumPrice, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                            LowerValue="{Binding Filtration.MinimumPrice, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                            Maximum="40000"
                            Minimum="0"
                            TickFrequency="250"
                            IsSnapToTickEnabled="True"/>
                        <StackPanel
                            Width="275"
                            Margin="0,20,0,12"
                            Orientation="Horizontal">
                            <TextBlock
                                VerticalAlignment="Bottom"
                                Text="Площадь   от"/>
                            <TextBlock
                                Style="{StaticResource RangeTextBlock}"
                                Text="{Binding Filtration.MinimumArea, StringFormat=0квм}"/>
