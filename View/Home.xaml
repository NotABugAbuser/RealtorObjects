<UserControl x:Class="RealtorObjects.View.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RealtorObjects.View"
             xmlns:vm="clr-namespace:RealtorObjects.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="667" d:DesignWidth="1298" Background="{StaticResource BackgroundGray}">
    <UserControl.DataContext>
        <vm:HomeViewModel/>
    </UserControl.DataContext>
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="ColumnHeader">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="{StaticResource GreenFont}"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="WhiteColumnHeader">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>

        <Style TargetType="ListBoxItem" x:Key="RealtorObjectListBoxItem">
            <Setter Property="Width" Value="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ListBox}, Path=ActualWidth}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Grid>
                            <Border
                                Margin="20,0,25,10"
                                Height="103"
                                BorderThickness="1,0,1,2"
                                BorderBrush="#ccc"
                                CornerRadius="5"
                                Background="white">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="157"/>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="110"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel 
                                        VerticalAlignment="top"
                                        Margin="10">
                                        <TextBlock 
                                            FontFamily="verdana"
                                            FontWeight="Bold"
                                            Foreground="{StaticResource GreenFont}"
                                            HorizontalAlignment="Center"
                                            Text="9 Ноября 2020"/>
                                        <TextBlock
                                            Margin="5"
                                            FontFamily="verdana"
                                            TextAlignment="Center"
                                            TextWrapping="WrapWithOverflow"
                                            Text="{Binding Customer.Name}"/>
                                        <TextBlock 
                                            HorizontalAlignment="Center"
                                            FontFamily="verdana"
                                            Text="{Binding Customer.PhoneNumberList[0]}"/>
                                    </StackPanel>
                                    <Image
                                        Margin="5"
                                        Stretch="Fill"
                                        Source="/View/Image/TestImage.png"
                                        Grid.Column="1"/>
                                    <StackPanel 
                                        Margin="10"
                                        VerticalAlignment="Top"
                                        Grid.Column="2">
                                        <TextBlock 
                                            FontFamily="verdana"
                                            FontWeight="Bold"
                                            Foreground="{StaticResource GreenFont}"
                                            HorizontalAlignment="Left"
                                            Text="Квартира"/>
                                        <StackPanel
                                            Margin="0,5,0,2"
                                            Orientation="Horizontal">
                                            <TextBlock
                                                FontFamily="verdana"
                                                HorizontalAlignment="Left"
                                                Text="Комнат:"/>
                                            <TextBlock
                                                Margin="5,0"
                                                FontFamily="verdana"
                                                HorizontalAlignment="Left"
                                                Text="{Binding RoomCount}"/>
                                        </StackPanel>
                                        <StackPanel
                                            Orientation="Horizontal">
                                            <TextBlock
                                                FontFamily="verdana"
                                                HorizontalAlignment="Left"
                                                Text="{Binding Cost.Area, StringFormat=0}"/>
                                            <TextBlock
                                                Margin="5,0"
                                                FontFamily="verdana"
                                                HorizontalAlignment="Left"
                                                Text="кв.м."/>
                                        </StackPanel>
                                        <StackPanel
                                            Margin="0,2"
                                            Orientation="Horizontal">
                                            <TextBlock
                                                FontFamily="verdana"
                                                HorizontalAlignment="Left"
                                                Text="6"/>
                                            <TextBlock
                                                Margin="5,0"
                                                FontFamily="verdana"
                                                HorizontalAlignment="Left"
                                                Text="соток"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel 
                                        Margin="10"
                                        VerticalAlignment="Top"
                                        Grid.Column="3">
                                        <TextBlock 
                                            FontFamily="verdana"
                                            FontWeight="Bold"
                                            Foreground="{StaticResource GreenFont}"
                                            HorizontalAlignment="Left"
                                            Text="Виноградная"/>
                                        <StackPanel
                                            Margin="0,5,0,2"
                                            Orientation="Horizontal">
                                            <TextBlock
                                                FontFamily="Courier new"
                                                HorizontalAlignment="Left"
                                                Text="Квартира №:"/>
                                            <TextBlock
                                                Margin="5,0"
                                                FontFamily="courier new"
                                                HorizontalAlignment="Left"
                                                Text="23"/>
                                        </StackPanel>
                                        <StackPanel
                                            Orientation="Horizontal">
                                            <TextBlock
                                                FontFamily="verdana"
                                                HorizontalAlignment="Left"
                                                Text="Дом №:"/>
                                            <TextBlock
                                                Margin="5,0"
                                                FontFamily="verdana"
                                                HorizontalAlignment="Left"
                                                Text="7"/>
                                        </StackPanel>
                                        <TextBlock
                                            Margin="0,2"
                                            FontFamily="verdana"
                                            HorizontalAlignment="Left"
                                            Text="Северная Звезда"/>
                                    </StackPanel>
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        Margin="8"
                                        TextAlignment="Justify"
                                        Grid.Column="4"
                                        FontFamily="Courier New"
                                        TextWrapping="WrapWithOverflow"
                                        Text="Просторный коридор, имеется чердачное помещение. Окна со ставнями. Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor inci"/>
                                    <StackPanel 
                                        Margin="10"
                                        VerticalAlignment="Top"
                                        Grid.Column="5">
                                        <TextBlock 
                                            FontFamily="verdana"
                                            FontWeight="Bold"
                                            Foreground="{StaticResource GreenFont}"
                                            HorizontalAlignment="Center"
                                            Text="35 000 000"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="ListBox">
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="MinHeight" Value="448"/>
            <Setter Property="Template" Value="{StaticResource ListBoxWithGreenScrollBar}"/>
            <Setter Property="ItemContainerStyle" Value="{StaticResource RealtorObjectListBoxItem}"/>
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel>
                        </VirtualizingStackPanel>
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Button" x:Key="NavigationButton">
            <Setter Property="Background" Value="white"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            MinWidth="20"
                            Padding="5,0"
                            Background="{TemplateBinding Background}">
                            <ContentPresenter 
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource MainGreen}"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="330"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid 
            Margin="20,10,0,0"
            Background="{StaticResource MainGreen}"
            Height="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="157"/>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="110"/>
                <ColumnDefinition Width="23"/>
            </Grid.ColumnDefinitions>
            <TextBlock
                Style="{StaticResource WhiteColumnHeader}"
                Text="Заявка"
                Grid.Column="0"/>
            <TextBlock
                Style="{StaticResource WhiteColumnHeader}"
                Text="Фото"
                Grid.Column="1"/>
            <TextBlock
                Style="{StaticResource WhiteColumnHeader}"
                Text="Объект"
                Grid.Column="2"/>
            <TextBlock
                Style="{StaticResource WhiteColumnHeader}"
                Text="Адрес"
                Grid.Column="3"/>
            <TextBlock
                Style="{StaticResource WhiteColumnHeader}"
                Text="Описание"
                Grid.Column="4"/>
            <TextBlock
                Style="{StaticResource WhiteColumnHeader}"
                Text="Цена, руб"
                Grid.Column="5"/>
        </Grid>
        <ScrollViewer 
            Template="{StaticResource GreenScrollViewer}" 
            CanContentScroll="False" 
            Margin="0,50,0,0"
            Grid.Row="0" 
            Grid.RowSpan="2" 
            Grid.ColumnSpan="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>
                <ListBox 
                    Margin="0"
                    ItemsSource="{Binding ToggledButtons}"/>
            </Grid>
        </ScrollViewer>
        <StackPanel
            VerticalAlignment="Top"
            Height="30"
            Grid.Row="2"
            Margin="0,5"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Content="1"
                Background="{StaticResource MainGreen}"
                Foreground="White"
                Style="{StaticResource NavigationButton}"/>
            <Button
                Content="2"
                Style="{StaticResource NavigationButton}"/>
            <Button
                Content="3"
                Style="{StaticResource NavigationButton}"/>
            <Button
                Content="4"
                Style="{StaticResource NavigationButton}"/>
            <Button
                Content="5"
                Style="{StaticResource NavigationButton}"/>
            <Button
                Content="6"
                Style="{StaticResource NavigationButton}"/>
            <Button
                Content="7"
                Style="{StaticResource NavigationButton}"/>
            <Button
                Content="..."
                Style="{StaticResource NavigationButton}"/>
            <Button
                Content="24"
                Style="{StaticResource NavigationButton}"/>
            <Button
                Content="25"
                Style="{StaticResource NavigationButton}"/>
        </StackPanel>
    </Grid>
</UserControl>
